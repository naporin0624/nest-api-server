{
  "name": "nest-api-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && webpack --config webpack.prod.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "webpack:server": "webpack --config webpack.dev.js",
    "start:server": "node dist/src/server",
    "start:prod": "node dist/src/server",
    "start:dev": "npm-run-all --parallel \"webpack:server --watch\" start:server",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "lint": "eslint ./src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.1",
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/microservices": "^6.5.3",
    "@nestjs/mongoose": "^6.1.2",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-socket.io": "^6.9.0",
    "@nestjs/swagger": "^3.1.0",
    "@nestjs/websockets": "^6.9.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.10.0",
    "date-fns": "^2.4.1",
    "google-protobuf": "^3.9.0",
    "grpc": "^1.23.2",
    "mongo": "^0.1.0",
    "mongoose": "^5.7.5",
    "path": "^0.12.7",
    "protobufjs": "^6.8.8",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "swagger-ui-express": "^4.0.7",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@nestjs/testing": "6.1.1",
    "@types/express": "4.16.1",
    "@types/jest": "^24.0.18",
    "@types/mongoose": "^5.5.9",
    "@types/node": "11.13.4",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "2.0.7",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^23.0.3",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "24.7.1",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.2.0",
    "ts-node": "8.1.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typescript": "3.4.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
