{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "types": ["react", "jest", "node"],
    "paths": {
      "@/*": ["./server/*"],
      "@@/*": ["./*"],
      "static/*": ["./static/*"]
    }
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts", "webpack"]
}
